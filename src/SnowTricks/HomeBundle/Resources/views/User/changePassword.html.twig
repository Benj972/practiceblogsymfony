{% extends "SnowTricksHomeBundle::layout.html.twig" %}

{% block body %}
    <div class="container" id="two">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
                <h2 class="post-title">Changez votre Mot de Passe!</h2>
                {{ form_start(form) }}

                    {{ form_row(form.oldPassword, {
                        'label': 'Mot de passe actuel'
                    }) }}

                    {{ form_row(form.newPassword.first, {
                        'label': 'Nouveau Mot de passe'
                    }) }}
                    {{ form_row(form.newPassword.second, {
                        'label': 'Nouveau Mot de passe'
                    }) }}
                    <button type="submit" class="btn btn-primary" formnovalidate>Validez</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}