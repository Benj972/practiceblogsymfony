{% extends "SnowTricksHomeBundle::layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2>Rentrez votre nouveau Mot de Passe</h1>
                {{ form_start(form) }}
                    {{ form_row(form.plainPassword.first, {
                        'label': 'Password'
                    }) }}
                    {{ form_row(form.plainPassword.second, {
                        'label': 'Repeat Password'
                    }) }}
                    <button type="submit" class="btn btn-primary" formnovalidate>Validez</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}