{% extends "SnowTricksHomeBundle::layout.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <h2 class="post-title">Rentrez votre nouveau Mot de Passe</h2>
                {{ form_start(form) }}
                    {{ form_row(form.plainPassword.first, {
                        'label': 'Mot de Passe'
                    }) }}
                    {{ form_row(form.plainPassword.second, {
                        'label': 'Répétez Mot de Passe'
                    }) }}
                    <button type="submit" class="btn btn-primary" formnovalidate>Validez</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}