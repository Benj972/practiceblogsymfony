<div class="col-sm-6 col-md-4" id="image-{{ form.vars.name }}">
    <div class="card my-4">
        {% if form.vars.data is not null %}
            <img class="card-img-top" src="{{ asset(form.vars.data.webPath) }}" alt="">
        {% endif %}
        <div class="card-body">
            {{ form_widget(form.file) }}
        </div>
        <div class="card-footer p-0">
            <button type="button" class="btn btn-danger btn-block btn-remove" data-rel="#image-{{ form.vars.name }}">Supprimer</button>
        </div>
    </div>
</div>